
<table id="customers">
  <tr>
    <th width="25%" align="left" >Bill Title</th>
    <th width="15%" align="left" >Alert Type</th>
    <th width="10%" align="left" >Next Due date</th>
    <th>Alert threshold</th>
    <th>Email</th>
    <th>Sms</th>
    <th>Facebook</th>
    <th colspan="3">Action</th>
  </tr>

<% for reminder in @reminders %>  
<tr class="<%= cycle("even", "alt") %>">
    <td width="20%"><%= link_to truncate(reminder.description, {:length => 30,:omission => '...'}) , reminder%> </td>
    <td width="10%"><%= alert_type_name(reminder.alert_type.to_i) %></td>
    <td width="10%"><%= reminder.due_date %></td>
    <td width="5%"><%= reminder.alert_threshold %> Day(s)</td>
    <td width="5%" style="text-align:center">
       <% if reminder.email %>
	    <img src="images/icons/tick.png" alt="True"/>
       <% else %>	  
	    <img src="images/icons/cross.png" alt="False"/>
       <% end %>
    </td>
    <td width="5%" style="text-align:center">
       <% if reminder.sms %>
	    <img src="images/icons/tick.png" alt="True"/>
       <% else %>	  
	    <img src="images/icons/cross.png" alt="False"/>
       <% end %>
    </td>
    <td width="5%" style="text-align:center">
       <% if reminder.facebook %>
	    <img src="images/icons/tick.png" alt="True"/>
       <% else %>	  
	    <img src="images/icons/cross.png" alt="False"/>
       <% end %>
    </td>
    <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
    <td><%= link_to 'Destroy', reminder, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Paid', new_payment_path(:bill_id => reminder.id) %></td>
  </tr>
<% end %>

</table>

